            <div class="header-main-logo">
                <h1>BASECAMP</h1>
            </div>
        <div class="header-main-links">
            <% if !logged_in? %>
                <% if request.path == "/login" %>
                    <%= link_to  "register" do %>
                        <span>Register</span>
                    <% end %>
                <% else %>
                    <%= link_to  "login" do %>
                        <span>Login</span>
                    <% end %>
                <% end %>
            <% else %>
                <%= link_to "projects" do %>
                    <span>PROJECTS</span>
                <% end %>
                <span>Users</span>
                <%= link_to "logout" do %>
                    <span>LOG OUT</span>
                <% end %>
            <% end %>
        </div>   
    </div>
