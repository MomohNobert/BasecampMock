<%= form_with(model: project, local: true, class: "form-container") do |form| %>
  <% if project.errors.any? %>
    <div class="error-message" id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <% project.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
    </div>
  <% end %>

  <div class="form-element-container">
    <div class="form-container-title">
      <%= label_tag(:name, "Title", class: "form-container__label-title") %>
      <%= form.text_field :name, class: "form-container__input-title" %>
    </div>

    <div class="form-container-description">
      <%= label_tag(:description, "Description", class: "form-container__label-description") %>
      <%= form.text_area :description, class: "form-container__input-description" %>
    </div>
  </div>

  <div class="actions">
    <% if request.path == "/projects/new" %>
        <%= form.submit "Create Project", class: "action-button" %>
    <% end %>
    <% if request.path.include?("edit") %>
        <%= form.submit "Update Project", class: "action-button" %>
    <% end %>
  </div>
<% end %>
