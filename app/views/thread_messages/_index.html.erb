<p id="notice"><%= notice %></p>

<h1>Thread Messages</h1>

<table>
  <thead>
    <tr>
      <th>Thread</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% messages.each do |thread_message| %>
      <tr>
        <td><%= thread_message.thread_message_id %></td>
        <td><%= thread_message.message %></td>
        <td><%= link_to 'Show', show_thread_message_path(id: thread_message.id) %></td>
        <td><%= link_to 'Edit', edit_thread_message_path(id: thread_message.id, project_thread_id: thread_message.project_thread_id) %></td>
        <td><%= link_to 'Delete Message', delete_thread_message_path(id: thread_message.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thread Message', create_thread_message_path(project_thread_id: params[:id]) %>
